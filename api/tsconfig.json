//Configuração para o node 22 lts (tsconfigdatabase)...
 
{
  "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
    "module": "nodenext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",

    "paths": {
      "@/*": ["./src/*"] //Toda importação que começa com @ é redirecionada para a pasta src
    }
  }
}
